{% extends 'base.html.twig' %}

{% block title %}Réinitialisation du mot de passe{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    {{ form_start(requestForm) }}
        <h1 class="form-title">Réinitialisation du mot de passe</h1>
        {{ form_row(requestForm.email) }}
        <div>
            <small>
                Saisissez votre adresse email pour recevoir un lien de réinitialisation de votre mot de passe
            </small>
        </div>

        <button class="form-submit btn btn-primary">Envoyer le mail</button>
    {{ form_end(requestForm) }}
{% endblock %}
